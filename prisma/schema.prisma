generator client {
  provider   = "prisma-client-js"
  engineType = "node"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id              String   @id @default(cuid())
  name            String?
  email           String   @unique
  phone           String?
  emailVerified   Boolean  @default(false)
  phoneVerified   Boolean  @default(false)
  createdAt       DateTime @default(now())
  
  orders          Order[]
  reservations    Reservation[]
}

model Restaurant {
  id            String   @id @default(cuid())
  name          String
  address       String?
  email         String?
  phone         String?
  isVerified    Boolean  @default(false)
  createdAt     DateTime @default(now())
}

model Order {
  id              String   @id @default(cuid())
  customerName    String
  customerEmail   String
  customerPhone   String
  deliveryAddress String
  items           Json
  subtotal        Float
  tax             Float
  total           Float
  paymentMethod   String   @default("cash")  // "cash" or "bkash"
  notes           String?
  status          String   @default("pending")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // bKash Payment Fields (all optional - only used when paymentMethod = "bkash")
  bkashNumber        String?  // Customer's bKash number
  bkashTransactionId String?  // Transaction ID from bKash
  bkashAmount        Float?   // Amount paid via bKash
  
  // Optional relation
  customerId      String?
  customer        Customer? @relation(fields: [customerId], references: [id])
}

model Reservation {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  date      DateTime
  time      String
  guests    Int
  message   String?
  status    String   @default("pending")
  createdAt DateTime @default(now())
  
  customerId String?
  customer   Customer? @relation(fields: [customerId], references: [id])
}

model Rating {
  id        String   @id @default(cuid())
  orderId   String
  rating    Int
  feedback  String?
  createdAt DateTime @default(now())
  
  @@index([orderId])
}
model Rating {
  id        String   @id @default(cuid())
  orderId   String   @unique  // ADD @unique HERE
  rating    Int
  feedback  String?
  createdAt DateTime @default(now())
}

model MenuItem {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  image       String?
  category    String
  createdAt   DateTime @default(now())
}